<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.qunar.ziqiang.webapp.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Spring MVC -->
	<servlet>
		<servlet-name>web</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>web</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>web</servlet-name>
		<url-pattern>*.json</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>web</servlet-name>
        <url-pattern>*.xml</url-pattern>
    </servlet-mapping>
    
    <!-- spring applicationContext配置 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
        <!-- 
		<param-value>WEB-INF/application-web.xml</param-value>
         -->
        <param-value>classpath*:spring/applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/500.html</location>
	</error-page>
	<servlet>
		<description></description>
		<display-name>WrapperScheduleServlet</display-name>
		<servlet-name>WrapperScheduleServlet</servlet-name>
		<servlet-class>com.qunar.ziqiang.webapp.servlet.WrapperScheduleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WrapperScheduleServlet</servlet-name>
		<url-pattern>/WrapperScheduleServlet</url-pattern>
	</servlet-mapping>
</web-app>